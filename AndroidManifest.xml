<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yelperhelper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.example.yelperhelper.YelperHelperApp"
        android:allowBackup="true"
        android:icon="@drawable/yelplogosm"
        android:label="@string/yelper_helper"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.yelperhelper.StartOptionsActivity"
            android:label="YelperHelper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.yelperhelper.PictureGridActivity"
            android:label="@string/yelper_helper" >
        </activity>
        <activity
            android:name="com.example.yelperhelper.PictureActivity"
            android:label="@string/yelper_helper" >
        </activity>
        <activity
            android:name="com.example.yelperhelper.ResultFragment"
            android:label="@string/yelper_helper" >
        </activity>
        <activity
            android:name="com.example.yelperhelper.DetailsFragment"
            android:label="@string/yelper_helper" >
        </activity>
    </application>

</manifest>
